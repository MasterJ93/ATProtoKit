tResult = try await atProtoBluesky.createPostRecord(","        text: \"Just tried out the new coffee shop in town ☕️ — highly recommend the cold brew!\"","    )","","    print(postResult)","} catch {","    throw error","}"]},{"type":"paragraph","inlineContent":[{"type":"text","text":"If your post is longer than 300 characters, the method will only take the first 300"},{"type":"text","text":" "},{"text":"characters, discarding the rest.","type":"text"}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"Bluesky will automatically set the language of the post to English, but if you need to"},{"type":"text","text":" "},{"text":"manually set it, you can use the ","type":"text"},{"code":"locales","type":"codeVoice"},{"type":"text","text":" argument:"}]},{"code":["do {","    let postResult = try await atProtoBluesky.createPostRecord(","        text: \"Première promenade d'automne 🍂. Les couleurs sont magnifiques cette année!\",","        locales: [Locale(identifier: \"fr_FR\")]","    )","","    print(postResult)","} catch {","    throw error","}"],"syntax":"swift","type":"codeListing"},{"inlineContent":[{"text":"You can add up to three locales at once; only the first three items will be added as this","type":"text"},{"text":" ","type":"text"},{"text":"is the limit mandated by Bluesky.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"type":"codeVoice","code":"createPostRecord()"},{"text":" will automatically look for URLs, hashtags, and @mentions for you.","type":"text"},{"type":"text","text":" "},{"text":"However, if you would like to add inline link facets to your account, you can use the","type":"text"},{"type":"text","text":" "},{"code":"inlineFacets","type":"codeVoice"},{"type":"text","text":" parameter:"}],"type":"paragraph"},{"syntax":"swift","code":["do {","    let inlineFacet = (URL(string: \"https:\/\/www.loc.gov\/resource\/pga.05046\/\"), 57, 72)","    let postResult = try await atProtoBluesky.createPostRecord(","        text: \"Where's that weird photo of a cat when you need one?\\n\\nAh: here it is!\",","        inlineFacets: [inlineFacet]","    )","","    print(postResult)","} catch {","    throw error","}"],"type":"codeListing"},{"content":[{"type":"paragraph","inlineContent":[{"text":"","type":"text"},{"type":"codeVoice","code":"startPostion"},{"text":" and ","type":"text"},{"code":"endPostion","type":"codeVoice"},{"type":"text","text":" must be UTF-8 values."}]}],"name":"Note","style":"note","type":"aside"},{"type":"heading","text":"Adding Embedded Content","anchor":"Adding-Embedded-Content","level":2},{"inlineContent":[{"text":"You can embed various kinds of content in your post, from media to external links,","type":"text"},{"type":"text","text":" "},{"type":"text","text":"to other records."}],"type":"paragraph"},{"text":"Images","anchor":"Images","level":3,"type":"heading"},{"type":"paragraph","inlineContent":[{"type":"text","text":"Use "},{"isActive":true,"type":"reference","identifier":"doc:\/\/ATProtoKit\/documentation\/ATProtoKit\/ATProtoTools\/ImageQuery"},{"text":" to add details to the image, such as","type":"text"},{"type":"text","text":" "},{"type":"text","text":"alt text, then attach it to the post record."}]},{"code":["do {","    let image = ATProtoTools.ImageQuery(","        imageData: Data(contentsOf: \"\/path\/to\/file\/cat.jpg\"),","        fileName: \"cat.jpg\",","        altText: \"A cat looking annoyed, waring a hat.\"","    )","","    let postResult = try await atProtoBluesky.createPostRecord(","        text: \"I don't think my cat likes her new hat... 🙃\",","        embed: .images(","            images: [image]","        )","    )","","    print(postResult)","} catch {","    throw error","}"],"syntax":"swift","type":"codeListing"},{"type":"paragraph","inlineContent":[{"text":"Up to four images can be attached to a post. All images need to be a .jpg format.","type":"text"}]},{"level":3,"type":"heading","anchor":"Videos","text":"Videos"},{"inlineContent":[{"text":"Similar to images, you can add videos to a post.","type":"text"}],"type":"paragraph"},{"code":["let videoURL = URL(string: \"\/path\/to\/file\/beach.mp4\")","","do {","    let postResult = try await atProtoBluesky.createPostRecord(","        text: \"The waves on the beach are looking as beautiful as ever.\",","        embed: .video(video: Data(contentsOf: videoFileURL))","    )","","    print(postResult)","} catch {","    throw error","}"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"type":"text","text":"Only one video can be added to a post, can be 50 MB or less, and must use the .mp4 format."},{"type":"text","text":" "},{"type":"text","text":"You can upload up to 25 videos per day and the 25 videos can’t exceed a total of 500 MB"},{"text":" ","type":"text"},{"type":"text","text":"for the day."}],"type":"paragraph"},{"level":3,"type":"heading","text":"External Links","anchor":"External-Links"},{"inlineContent":[{"type":"text","text":"You can attach a website card to the post."}],"type":"paragraph"},{"syntax":"swift","code":["Task {","    print(\"Starting application...\")","","    do {","        let session = try await config.authenticate()","","        let externalLinkBuilder = ExternalLinkBuilder()","","        guard let link = URL(string: \"https:\/\/www.youtube.com\/watch?v=dQw4w9WgXcQ\") else { return }","        let metadata = try await linkBuilder.grabMetadata(from: link)","","        let atProto = ATProtoKit(session: session)","        let atProtoBluesky = ATProtoBluesky(atProtoKitInstance: atProto)","","        let postResult = try await atProtoBluesky.createPostRecord(","            text: \"Really glad to hear his talk in person!\",","            embed: .external(","                url: metadata.url,","                title: metadata.title,","                description: metadata.description ?? \"No description given.\",","                thumbnailURL: metadata.thumbnailURL","            )","        )","","        print(\"Post Result: \\(postResult)\")","    } catch {","        throw error","    }","}"],"type":"codeListing"},{"type":"paragraph","inlineContent":[{"text":"If there are any links in the post’s text, the method will not convert it into a","type":"text"},{"text":" ","type":"text"},{"text":"website card; you will need to manually achieve this.","type":"text"}]},{"type":"heading","level":2,"anchor":"Creating-a-Quote-Post","text":"Creating a Quote Post"},{"type":"paragraph","inlineContent":[{"type":"text","text":"Quote posts are also embeds: you simply need to embed the record’s strong reference to it."}]},{"syntax":"swift","code":["do {","    let strongReference = ComAtprotoLexicon.Repository.StrongReference(recordURI: record.uri, cidHash: record.cid)","","    let postResult = try await atProtoBluesky.createPostRecord(","        text: \"Me whenever I look at my email:\",","        embed: .record(strongReference: strongReference)","    )","","    print(postResult)","} catch {","    throw error","}"],"type":"codeListing"},{"type":"paragraph","inlineContent":[{"type":"text","text":"Only one record can be embedded. This isn’t limited to post records, though: you can embed"},{"type":"text","text":" "},{"type":"text","text":"any Bluesky-related record that you wish."}]},{"level":2,"type":"heading","text":"Creating a Reply","anchor":"Creating-a-Reply"},{"type":"paragraph","inlineContent":[{"type":"text","text":"To create a reply, pass the reply reference of the post’s reply reference to the post record."}]},{"code":["do {","    let replyReference = try await ATProtoTools().createReplyReference(","        from: parentPost,","        session: session","    )","","    let postResult = try await atProtoBluesky.createPostRecord(","        text: \"I also like pancakes.\",","        replyTo: replyReference","    )","","    print(postResult)","} catch {","    throw error","}"],"syntax":"swift","type":"codeListing"},{"type":"paragraph","inlineContent":[{"type":"text","text":"If you want to create a thread of posts, use"},{